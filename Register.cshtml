@model WebApplication1.Models.Member
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>


<div>
    @using (Html.BeginForm("Register", "Register", FormMethod.Post))
    {
        <fieldset>
            <div>
                @Html.LabelFor(u => u.Firstname) <br />
                @Html.EditorFor(u => u.Firstname)<br />
            </div>
            <div>
                @Html.LabelFor(u => u.Secondname)<br />
                @Html.EditorFor(u => u.Secondname)<br />
            </div>
            <div>
                @Html.LabelFor(u => u.Username)<br />
                @Html.EditorFor(u => u.Username)<br />
            </div>
            <div>
                @Html.LabelFor(u => u.Email)<br />
                @Html.EditorFor(u => u.Email)<br />
            </div>
            <div>
                @Html.LabelFor(u => u.Password)<br />
                @Html.EditorFor(u => u.Password)<br />

                <input type="submit" value="submit" />
            </div>
        </fieldset>
    }
    @{Html.EndForm();}
</div>
